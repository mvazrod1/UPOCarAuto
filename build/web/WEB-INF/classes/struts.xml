        </action>
    </package>
    
    <package name="empleados" namespace="/Empleado" extends="struts-default">

        <!-- Acción principal -->
        <action name="indexEmpleado" class="acciones.EmpleadoAction" method="execute">
            <result>indexEmpleado.jsp</result>
        </action>

        <!-- Consultar empleado -->
        <action name="consultarEmpleado" class="acciones.EmpleadoAction" method="consultarEmpleado">
            <result>detallesEmpleado.jsp</result>
        </action>

        <!-- Mostrar formulario de alta -->
        <action name="altaEmpleado" class="acciones.EmpleadoAction" method="mostrarAltaEmpleadoForm">
            <result>formAltaEmpleado.jsp</result>
        </action>

        <!-- Registrar nuevo empleado -->
        <action name="registrarEmpleado" class="acciones.EmpleadoAction" method="registrarEmpleado">
            <result name="success" type="redirectAction">indexEmpleado</result>
            <result name="input">formAltaEmpleado.jsp</result>
        </action>

        <!-- Mostrar formulario de edición -->
        <action name="editarEmpleado" class="acciones.EmpleadoAction" method="mostrarModificarEmpleadoForm">
            <result>modificarEmpleado.jsp</result>
        </action>

        <!-- Guardar cambios de empleado -->
        <action name="guardarModfEmpleado" class="acciones.EmpleadoAction" method="modificarEmpleado">
            <result name="success" type="redirectAction">indexEmpleado</result>
            <result name="input">modificarEmpleado.jsp</result>
        </action>

        <!-- Eliminar empleado -->
        <action name="eliminarEmpleado" class="acciones.EmpleadoAction" method="eliminarEmpleado">
            <result name="success" type="redirectAction">indexEmpleado</result>
        </action>
    </package>
    
    <package name="inventarios" namespace="/Inventario" extends="struts-default">

        <!-- Listado de inventarios -->
        <action name="indexInventario" class="acciones.InventarioAction" method="execute">
            <result>/Inventario/indexInventario.jsp</result>
        </action>

        <!-- Buscar inventario (por id, o por otro criterio que implementes) -->
        <action name="buscarInventario" class="acciones.InventarioAction" method="buscar">
            <result name="success">/Inventario/indexInventario.jsp</result>
            <result name="input">/Inventario/indexInventario.jsp</result>
        </action>

        <!-- Consulta de un inventario concreto -->
        <action name="consultarInventario"
                class="acciones.InventarioAction"
                method="consultar">
            <result name="success">/Inventario/detallesInventario.jsp</result>
            <result name="input">/Inventario/indexInventario.jsp</result>
        </action>

        <!-- Formulario de alta -->
        <action name="altaInventario" class="acciones.InventarioAction" >
            <result>/Inventario/formAltaInventario.jsp</result>
        </action>

        <!-- Guardar nuevo inventario -->
        <action name="guardarInventario"
                class="acciones.InventarioAction"
                method="guardarAlta">
            <result name="success" type="redirectAction">indexInventario</result>
            <result name="input">/Inventario/formAltaInventario.jsp</result>
        </action>

        <!-- Formulario de modificación (carga datos previos) -->
        <action name="editarInventario" class="acciones.InventarioAction" method="modificar">
            <result>/Inventario/modificarInventario.jsp</result>
        </action>

        <!-- Guardar cambios en el inventario -->
        <action name="actualizarInventario"
                class="acciones.InventarioAction"
                method="guardarModificacion">
            <result name="success" type="redirectAction">indexInventario</result>
            <result name="input">/Inventario/modificarInventario.jsp</result>
        </action>

        <!-- Eliminar un inventario -->
        <action name="eliminarInventario" class="acciones.InventarioAction" method="eliminar">
            <result name="success" type="redirectAction">indexInventario</result>
            <result name="input">/Inventario/indexInventario.jsp</result>
        </action>

    </package>
    
    <package name="pagos" namespace="/Pago" extends="struts-default">

        <action name="indexPago" class="acciones.PagoAction" method="execute">
            <result>/Pago/indexPago.jsp</result>
        </action>

        <action name="consultarPago" class="acciones.PagoAction" method="consultarPago">
            <result>/Pago/detallesPago.jsp</result>
        </action>

        <action name="altaPago" class="acciones.PagoAction">
            <result>/Pago/formAltaPago.jsp</result>
        </action>

        <action name="guardarPago"
                class="acciones.PagoAction"
                method="guardarAlta">
            <result name="success" type="redirectAction">indexPago</result>
            <result name="input">/Pago/formAltaPago.jsp</result>
        </action>


        <action name="editarPago" class="acciones.PagoAction" method="consultarPago">
            <result>/Pago/modificarPago.jsp</result>
        </action>

        <action name="guardarModfPago" class="acciones.PagoAction" method="modificarPago">
            <result name="success" type="redirectAction">indexPago</result>
            <result name="input">/Pago/modificarPago.jsp</result>
        </action>

        <action name="eliminarPago" class="acciones.PagoAction" method="eliminarPago">
            <result name="success" type="redirectAction">indexPago</result>
            <result name="error">/Pago/indexPago.jsp</result>
        </action>

    </package>


    
    
</struts>
