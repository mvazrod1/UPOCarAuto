        </action>
        
        <action name="consultarVehiculo"
                class="acciones.VehiculoAction"
                method="consultar">
            <result name="success">/Vehiculo/detallesVehiculo.jsp</result>
            <result name="input">/Vehiculo/indexVehiculo.jsp</result>
        </action>

        <action name="altaVehiculo" class="acciones.VehiculoAction">
            <result>/Vehiculo/formAltaVehiculo.jsp</result>
        </action>

        <action name="guardarVehiculo"
                class="acciones.VehiculoAction"
                method="guardarAlta">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/formAltaVehiculo.jsp</result>
        </action>

        <action name="editarVehiculo" class="acciones.VehiculoAction" method="modificar">
            <result>/Vehiculo/modificarVehiculo.jsp</result>
        </action>

        <action name="actualizarVehiculo" class="acciones.VehiculoAction" method="guardarModificacion">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/modificarVehiculo.jsp</result>
        </action>

        <action name="eliminarVehiculo" class="acciones.VehiculoAction" method="eliminar">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/indexVehiculo.jsp</result>
        </action>
    </package>
    
    <package name="reservas" namespace="/Reserva" extends="struts-default">
        <action name="indexReserva" class="acciones.ReservaAction" method="execute">
            <result>/Reserva/indexReserva.jsp</result>
        </action>
        
        <action name="buscarReserva" class="acciones.ReservaAction" method="buscar" >
            <result name="success">/Reserva/indexReserva.jsp</result>
            <result name="input">/Reserva/indexReserva.jsp</result>
        </action>
        
        <action name="altaReserva" class="acciones.ReservaAction" method="mostrarAltaReservaForm">
            <result>/Reserva/formAltaReserva.jsp</result>
        </action>
        
        <action name="registrarReserva" class="acciones.ReservaAction" method="registrarReserva">
            <result name="success" type="redirectAction">indexReserva</result>
            <result name="input">/Reserva/formAltaReserva.jsp</result>
        </action>

        <action name="consultarReserva" class="acciones.ReservaAction" method="consultarReserva">
            <result>/Reserva/detallesReserva.jsp</result>
