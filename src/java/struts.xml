<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        
    </package>
    
    <package name="clientes" namespace="/Cliente" extends="struts-default">
        <action name="indexCliente" class="acciones.ClienteAction" method="execute">
            <result>/Cliente/indexCliente.jsp</result>
        </action>
        
        <action name="altaCliente" class="acciones.ClienteAction" method="mostrarAltaClienteForm">
            <result>/Cliente/formAltaCliente.jsp</result>
        </action>
        
        <action name="registrarCliente" class="acciones.ClienteAction" method="registrarCliente">
            <result name="success" type="redirectAction">indexCliente</result>
            <result name="input">/Cliente/formAltaCliente.jsp</result>
        </action>

        <action name="consultarCliente" class="acciones.ClienteAction" method="consultarCliente">
            <result>/Cliente/detallesCliente.jsp</result>
        </action>

        <action name="editarCliente" class="acciones.ClienteAction" method="mostrarModificarClienteForm">
            <result>/Cliente/modificarCliente.jsp</result>
        </action>
        
        <action name="guardarModfCliente" class="acciones.ClienteAction" method="modificarCliente">
            <result name="success" type="redirectAction">indexCliente</result>
            <result name="input">/Cliente/indexCliente.jsp</result>
        </action>

        <action name="eliminarCliente" class="acciones.ClienteAction" method="eliminarCliente">
            <result name="success" type="redirectAction">indexCliente</result>
            <result name="input">/Cliente/indexCliente.jsp</result>
        </action>
        
    </package>
    <package name="vehiculos" namespace="/Vehiculo" extends="struts-default">
        <action name="indexVehiculo" class="acciones.VehiculoAction" >
            <result>/Vehiculo/indexVehiculo.jsp</result>
        </action>
        <action name="buscarVehiculo" class="acciones.VehiculoAction" method="buscar" >
            <result name="success">/Vehiculo/indexVehiculo.jsp</result>
            <result name="input">/Vehiculo/indexVehiculo.jsp</result>
        </action>
        
        <action name="consultarVehiculo"
                 class="acciones.VehiculoAction"
                 method="consultar">
            <result name="success">/Vehiculo/detallesVehiculo.jsp</result>
            <result name="input">/Vehiculo/indexVehiculo.jsp</result>
        </action>

        <action name="altaVehiculo" class="acciones.VehiculoAction">
            <result>/Vehiculo/formAltaVehiculo.jsp</result>
        </action>

        <action name="guardarVehiculo"
                class="acciones.VehiculoAction"
                method="guardarAlta">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/formAltaVehiculo.jsp</result>
        </action>

        <action name="editarVehiculo" class="acciones.VehiculoAction" method="modificar">
            <result>/Vehiculo/modificarVehiculo.jsp</result>
        </action>

        <action name="actualizarVehiculo" class="acciones.VehiculoAction" method="guardarModificacion">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/modificarVehiculo.jsp</result>
        </action>

        <action name="eliminarVehiculo" class="acciones.VehiculoAction" method="eliminar">
            <result name="success" type="redirectAction">indexVehiculo</result>
            <result name="input">/Vehiculo/indexVehiculo.jsp</result>
        </action>
    </package>

</struts>
